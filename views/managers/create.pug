extends ../layout

block content
  p.lead.text-center= title

  hr

  form.form-group(method="post")
      div.form-input
        label Name
        input.form-control(type="text", name="name", value=form.name, autofocus)

      div.form-input.mt-3
        label Contact
        input.form-control(type="text", name="contact", value=form.contact)

      div.form-input.mt-3
        label Note
        textarea.form-control(name="note")= form.note

      div.form-input.mt-3
          input.btn.btn-primary(type="submit", value="Submit")
