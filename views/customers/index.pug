extends ../layout

block content
  p.lead.text-center= title

  hr

  if customers.length
    div.list-group
      each customer in customers
        a.list-group-item.list-group-item-action(href="/customers/edit/" + customer.id) #{customer.name}
  else
    div.list-group
      p.text-center Inga kunder Ã¤n

  form.mt-3(method="get" action="/customers/create/")
    div.row
      div.col
        input.form-control(type="text", name="name", autofocus, required)
      div.col-md-4.col-5
        input.btn.btn-primary.mb-2.w-100(type="submit", value="Ny kund")