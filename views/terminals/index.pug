extends ../layout

block content
  p.lead.text-center= title

  hr

  if unregisteredTerminals.length
    div.list-group
      each terminal in unregisteredTerminals
        a.font-weight-bold.list-group-item.list-group-item-action(href="/terminals/" + terminal.id) #{terminal.macAddress} 
          small #{terminal.nickname.name}
  else
    div.list-group
      p.text-center Inga oregistrerade terminaler

  hr

  if registeredTerminals.length
    div.list-group
      each terminal in registeredTerminals
        a.font-weight-bold.list-group-item.list-group-item-action(href="/terminals/" + terminal.id) #{terminal.macAddress} 
          small #{terminal.nickname.name}
  else
    div.list-group
      p.text-center Inga registrerade terminaler
