extends ../layout

block content
  p.lead.text-center= title

  hr

  form.form-group(name="register", method="post")
      div.form-input
        label Användarnamn
        input.form-control(type="text", name="username")

      div.form-input.mt-2
        label Lösenord
        input.form-control(type="password", name="password")

      div.form-input.mt-2
        label E-post
        input.form-control(type="email", name="email")

      div.form-input.mt-2
          input.btn.btn-primary(type="submit", value="Registrera")
